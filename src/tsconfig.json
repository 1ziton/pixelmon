{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "esnext",
    "outDir": "../out-tsc/app",
    "baseUrl": ".",
    "types": ["node"],
    "jsx": "react",
    "paths": {
      "@core/*": ["app/core/*"],
      "@shared": ["app/shared"],
      "@shared/*": ["app/shared/*"],
      "@pixelmon/*": ["../packages/*"],
      "@dist/*": ["../dist/@pixelmon/*"]
    }
  },

  "exclude": ["test.ts", "**/*.spec.ts", "templates/*.ts"]
}
